<div class="col-lg-12">
  <div class="panel panel-success">
      <div class="panel-heading">
          Listing Transactions
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <%= link_to 'New Transaction', new_transaction_path, class: "btn btn-default" %>
        <br><br>
          <div class="dataTable_wrapper">
            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-menus">
              <thead>
                <tr>
                  <th>Order</th>
                  <th>Paid amount</th>
                  <th>Discount</th>
                  <th>Validation</th>
                  <th>Show</th>
                  <th>Edit</th>
                  <th>Destroy</th>
                </tr>
              </thead>

              <tbody>
                <% @transactions.each do |transaction| %>
                  <tr>
                    <td><%= transaction.order.id %></td>
                    <td><%= transaction.paid_amount %></td>
                    <td><%= transaction.discount %></td>
                    <td><%= transaction.validation_id %></td>
                    <td><%= link_to 'Show', transaction %></td>
                    <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
                    <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
      </div>
  </div>
</div>

