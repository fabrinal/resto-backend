<div class="col-lg-12">
  <div class="panel panel-default">
      <div class="panel-heading">
          Orders
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <%= link_to 'New Order', new_order_path, class: "btn btn-default" %>
        <br><br>
          <div class="dataTable_wrapper">
            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-categories">
              <thead>
                <tr>
                  <th>Order Id</th>
                  <th>Table</th>
                  <th>Show</th>
                  <th>Edit</th>
                  <th>Destroy</th>
                </tr>
              </thead>

              <tbody>
               <% @orders.each do |order| %>
                  <tr>
                    <td><%= order.id %></td>
                    <td><%= order.table %></td>
                    <td><%= link_to 'Show', order %></td>
                    <td><%= link_to 'Edit', edit_order_path(order) %></td>
                    <td>
                    <%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
      </div>
  </div>
</div>

