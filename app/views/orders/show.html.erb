<div class="panel panel-primary">
  <div class="panel-heading">
     <%= link_to 'Edit', edit_order_path(@order), class: "btn btn-default" %> | <%= link_to 'Back', orders_path, class: "btn btn-default" %>
  </div>
  <div class="panel-body">
    <p>
      <strong>Table:</strong>
      <%= @order.table %>
    </p>
    <% if @order.order_items.nil? == false %>
     <div class="dataTable_wrapper">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-categories">
          <thead>
            <tr>
              <th>Menu</th>
              <th>Quantity</th>
              <th>Price</th>
            </tr>
          </thead>
          <tbody>
           <% @order.order_items.each do |order_item| %>
              <tr>
                <td><%= order_item.menu.name %></td>
                <td><%= order_item.quantity %></td>
                <td><%= order_item.menu.price %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>

