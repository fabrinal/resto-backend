<div class="col-lg-12">
  <div class="panel panel-success">
      <div class="panel-heading">
          Listing Menu
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <%= link_to 'New Menu', new_menu_path, class: "btn btn-default" %>
        <br><br>
          <div class="dataTable_wrapper">
            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-menus">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Price</th>
                  <th>Category</th>
                  <th>Show</th>
                  <th>Edit</th>
                  <th>Destroy</th>
                </tr>
              </thead>

              <tbody>
                <% @menus.each do |menu| %>
                  <tr>
                    <td><%= menu.name %></td>
                    <td><%= menu.price %></td>
                    <td><%= menu.category.name %></td>
                    <td><%= link_to 'Show', menu %></td>
                    <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
                    <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

          </div>
      </div>
  </div>
</div>


<br>



