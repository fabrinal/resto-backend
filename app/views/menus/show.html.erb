<div class="panel panel-success">
  <div class="panel-heading">
     <%= link_to 'Edit', edit_menu_path(@menu), class: "btn btn-default" %> | <%= link_to 'Back', menus_path, class: "btn btn-default" %>
  </div>
  <div class="panel-body">
    <p>
      <strong>Name:</strong>
      <%= @menu.name %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= @menu.price %>
    </p>

    <p>
      <strong>Category:</strong>
      <%= @menu.category.name %>
    </p>

    <p>
      <%= image_tag @menu.menu_photo.url(:medium) %>
    </p>
  </div>
</div>
